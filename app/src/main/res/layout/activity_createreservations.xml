<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    tools:context=".CreateReservationActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:navigationIcon="?homeAsUpIndicator" />

    <EditText
        android:id="@+id/PurposeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/toolbar"
        android:layout_centerInParent="true"
        android:hint="Type purpose here"
        android:maxLines="1"
        android:textSize="20dp" />

    <Button
        android:id="@+id/ChooseDateButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/PurposeText"
        android:layout_centerInParent="true"
        android:onClick="ChooseDate"
        android:text="Choose date" />

    <TextView
        android:id="@+id/ShowDateView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_below="@id/ChooseDateButton"
        android:textSize="20dp" />

    <Button
        android:id="@+id/FromTimeButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ShowDateView"
        android:text="From Time"
        android:visibility="invisible" />

    <Button
        android:id="@+id/ToTimeButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ShowDateView"
        android:layout_alignEnd="@id/FromTimeButton"
        android:layout_alignParentEnd="true"
        android:text="To Time"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/FromTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/FromTimeButton"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/ToTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@id/FromTime"
        android:layout_below="@id/ToTimeButton"
        android:layout_alignParentEnd="true"
        android:textSize="20dp" />

    <Button
        android:id="@+id/reserveButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/FromTime"
        android:onClick="ReserveRoom"
        android:text="Reserve"
        android:visibility="invisible" />


    <TextView
        android:id="@+id/OnFailure"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/FromTime"
        android:layout_toRightOf="@id/reserveButton"
        android:textSize="20dp" />

</RelativeLayout>